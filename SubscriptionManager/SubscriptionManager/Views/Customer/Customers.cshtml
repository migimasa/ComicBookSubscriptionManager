@model List<SubscriptionManager.Models.Customer.Customer>

@{
    ViewBag.Title = "Customers";
}

<table class="table table-striped table-hover table-bordered" id="CustomerTable">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (SubscriptionManager.Models.Customer.Customer customer in Model)
        {
            <tr>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.EmailAddress</td>
                <td>@customer.PhoneNumber</td>
                <td>@customer.City</td>
                <td>@customer.State</td>
                <td>@customer.ZipCode</td>
                <td>
                    <div class="btn-group">
                        <a href="#" class="btn btn-primary">Actions</a>
                        <a href="#" class="btn btn-primary dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("ModifyCustomer")/@customer.CustomerId/?storeId=@customer.StoreId">Edit</a></li>
                        </ul>
                        @*<a href="@Url.Action("ModifyCustomer")/@customer.CustomerId/?storeId=@customer.StoreId" class="btn btn-primary">Edit</a>*@
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>

@section Scripts {
    @Scripts.Render("~/Scripts/Customer/Customers.js")
}