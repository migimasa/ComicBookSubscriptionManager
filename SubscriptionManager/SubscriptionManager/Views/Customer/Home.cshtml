@model SubscriptionManager.Models.Customer.Customer
@{
    ViewBag.Title = string.Format("{0} {1} Home", Model.FirstName, Model.LastName);
}

<div class="container-fluid">
    <div class="col-lg-5">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h2 class="panel-title">
                    @Html.DisplayFor(x => x.FirstName) @Html.DisplayFor(x => x.LastName)
                </h2>
            </div>
            <div class="panel-body">
                <p>
                    City: <strong>@Html.DisplayFor(x => x.CityState)</strong>
                </p>
                <p>
                    Phone: <strong>@Html.DisplayFor(x => x.PhoneNumber)</strong>
                </p>
                <p>
                    Email: <strong>@Html.DisplayFor(x => x.EmailAddress)</strong>
                </p> 
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-5">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Subscriptions</h3>
            </div>
            <div class="panel-body">
                @Html.ActionLink(@Model.SubscriptionsCount.ToString("N0"), "Library", "Customer", new { id = Model.CustomerId }, new { }) active subscriptions.
            </div>
        </div>
    </div>
</div>